{
  "name": "d3-color-legend",
  "version": "1.1.0",
  "description": "SVG color legends for continuous or discrete D3 scales",
  "main": "dist/d3-color-legend.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build": "webpack",
    "watch": "webpack --progress --colors --watch",
    "minify": "uglifyjs dist/d3-color-legend.js -o dist/d3-color-legend.min.js -c -m",
    "prepublish": "npm run build && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/d3-color-legend.git"
  },
  "keywords": [
    "D3",
    "legend",
    "color",
    "discrete",
    "continuous",
    "scales"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "http://bl.ocks.org/vasturiano"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasturiano/d3-color-legend/issues"
  },
  "homepage": "https://github.com/vasturiano/d3-color-legend#readme",
  "dependencies": {
    "d3-selection": "^1.1.0",
    "kapsule": "^1.5.0",
    "svg-text-fit": "^1.1.0",
    "svg-utils": "^1.2.0",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "uglify-js": "^3.1.0",
    "webpack": "^3.5.6"
  }
}
