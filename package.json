{
  "name": "d3-color-legend",
  "version": "1.1.0",
  "description": "SVG color legends for continuous or discrete D3 scales",
  "main": "dist/d3-color-legend.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && rollup -c --banner \"$(preamble)\"",
    "watch": "rollup -c -w",
    "minify": "uglifyjs dist/d3-color-legend.js -o dist/d3-color-legend.min.js -c -m --preamble \"$(preamble)\"",
    "prepublish": "npm run build && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/d3-color-legend.git"
  },
  "keywords": [
    "D3",
    "legend",
    "color",
    "discrete",
    "continuous",
    "scales"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "http://bl.ocks.org/vasturiano"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasturiano/d3-color-legend/issues"
  },
  "homepage": "https://github.com/vasturiano/d3-color-legend#readme",
  "dependencies": {
    "d3": "^4.10",
    "kapsule": "^1.3.0",
    "svg-text-fit": "^1.0.2",
    "svg-utils": "^1.0.0",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "package-preamble": "~0.1.0",
    "rollup": "~0.47.4",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^4.3",
    "uglify-js-es6": "^2.8.9"
  }
}
